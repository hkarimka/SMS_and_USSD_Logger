<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvType"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="@string/type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Spinner
        android:id="@+id/spType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/spinner_type"
        android:gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tvType"
        app:layout_constraintStart_toEndOf="@id/tvType"/>

    <TextView
        android:id="@+id/tvQueueId"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="@string/queue_id"
        app:layout_constraintTop_toBottomOf="@id/tvType"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etQueueId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/tvQueueId"
        android:gravity="center"
        android:hint="1"
        android:inputType="number"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tvQueueId"
        app:layout_constraintTop_toTopOf="@id/tvQueueId"
        app:layout_constraintBottom_toBottomOf="@id/tvQueueId" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="@string/text"
        app:layout_constraintTop_toBottomOf="@id/tvQueueId"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/tvText"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:hint="*100#"
        app:layout_constraintTop_toTopOf="@id/tvText"
        app:layout_constraintBottom_toBottomOf="@id/tvText"
        app:layout_constraintStart_toEndOf="@id/tvText"/>

    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:text="@string/recipient"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvText"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etDestination"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:labelFor="@+id/tvDestination"
        android:gravity="center"
        android:inputType="phone"
        android:hint="+79123456789"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tvDestination"
        app:layout_constraintBottom_toBottomOf="@id/tvDestination"
        app:layout_constraintStart_toEndOf="@id/tvDestination"/>
</androidx.constraintlayout.widget.ConstraintLayout>